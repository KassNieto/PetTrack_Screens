<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#F88349"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/Theme.PetTrack.PopupOverlay" />

    <TextView
        android:id="@+id/txtIndicaciones"
        android:layout_width="248dp"
        android:layout_height="79dp"
        android:layout_marginStart="81dp"
        android:layout_marginTop="415dp"
        android:layout_marginEnd="82dp"
        android:hint="@string/indicaciones"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMas"
        android:layout_width="61dp"
        android:layout_height="66dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="272dp"
        android:layout_marginEnd="178dp"
        android:backgroundTint="#F88349"
        android:text="@string/mas"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtIndicaciones" />

</androidx.constraintlayout.widget.ConstraintLayout>