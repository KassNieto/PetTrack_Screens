<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TipoMascotaBottoms">

    <TextView
        android:id="@+id/tlt_tipo_mascota"
        android:layout_width="329dp"
        android:layout_height="144dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="69dp"
        android:gravity="center"
        android:text="@string/title_tipo_mascota"
        android:textColor="#FF9800"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_perro"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_button_selector"
        android:text="Perro"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btn_gato"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tlt_tipo_mascota" />

    <Button
        android:id="@+id/btn_gato"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="54dp"
        android:background="@drawable/rounded_button_selector"
        android:text="Gato"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_perro"
        app:layout_constraintTop_toBottomOf="@+id/tlt_tipo_mascota" />

    <Button
        android:id="@+id/btn_otra_mascota"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="148dp"
        android:background="@drawable/rounded_button_selector"
        android:text="+"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="70sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_gato" />


</androidx.constraintlayout.widget.ConstraintLayout>